</script>
<style>
    .h-max-50 {
        max-height: 50vh;
    }

    .category-section {
        padding: 60px 0;
    }

    .image-hover {
        overflow: hidden;
        transition: transform 0.3s ease-in-out;
    }

    .image-hover:hover {
        transform: translateY(-5px);
    }

    .category-image img {
        width: 100%;
        height: auto;
    }

    .category-title {
        margin-top: 10px;
        font-size: 20px;
        font-weight: bold;
    }

    .product-image {
        width: 60px;
        height: 60px;
        object-fit: cover;
    }
</style>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Nayana Travel Agency</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Services
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li class="nav-item">
                                <a class="nav-link" href="/flights">Flights</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/hotels">Hotels</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/shuttles">Shuttles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/map">Map</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/weather">Weather</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/messaging">Messaging</a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/explore">Explore</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/marketplace">Marketplace</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/reviews">Reviews</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">About</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid p-3 bg-body-secondary">
        <div class="row">
            <div class="col-12 d-flex justify-content-between align-items-center">
                <div class="d-flex justify-content-start">
                    <h4 class="fw-normal"><i class="fa fa-dashboard" aria-hidden="true"></i> Dashboard</h4>
                </div>
                <div class="d-flex justify-content-end">
                    <li class="list-group dropdown">
                        <a a class="dropdown-toggle" href="#" id="profileDropDown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="{{user.picture}}" alt="{{user.name}}" class="img-fluid rounded-circle"
                                width="40px">
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="profileDropDown">
                            <li class="dropdown-item">
                                <a class="nav-link" href="/marketplace/dashboard/settings/">Settings</a>
                            </li>
                            <li class="dropdown-item">
                                <a class="nav-link" href="/marketplace/dashboard/profile/">Profile</a>
                            </li>
                            <li class="dropdown-divider text-bg-secondary"></li>
                            <li class="dropdown-item">
                                <a class="nav-link" href="/logout">Logout</a>
                            </li>
                        </ul>
                    </li>
                </div>
            </div>
        </div>
    </div>
    <main>

        <section class="container-fluid p-4">
            <h3>Hi {{user.name}}</h3>

            <!-- Component to display added products -->
            <div class="card my-4">
                <div class="card-header">
                    Added Products
                </div>
                <div class="card-body">
                    <div class="container w-100 d-flex justify-content-end">
                        <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal"
                            data-bs-target="#addProductModal">
                            <i class="fas fa-plus me-2"></i> Add New Product
                        </button>
                    </div>
                    <div class="container">
                        <ul class="list-group" id="productList">
                            <!-- Sample product -->
                            {{#each products}}
                            <li class="list-group-item d-flex justify-content-between align-items-center product-with-image p-3 mb-3 rounded border"
                                id="product-{{_id}}">
                                <div class="d-flex align-items-center">
                                    <img src="{{image}}" alt="{{name}}"
                                        class="img-fluid me-3 rounded-circle shadow product-image">
                                    <div>
                                        <h5 class="mb-0 font-weight-bold">{{name}}</h5>
                                        <small class="text-muted font-weight-bold">{{description}}</small>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-primary rounded-pill me-3">${{price}}</span>
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-danger me-2 deleteProduct"
                                            data-product-id="{{_id}}"><i class="fas fa-trash"></i></button>
                                        <button type="button" class="btn btn-secondary"><i
                                                class="fas fa-edit"></i></button>
                                    </div>
                                </div>
                            </li>
                            {{/each}}
                        </ul>

                    </div>
                </div>
            </div>

        </section>


    </main>

    <footer class="bg-light py-3 mt-3">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p class="text-muted mb-0">Nayana Travel Agency &copy; 2023</p>
                </div>
                <div class="col-md-6">
                    <p class="text-muted mb-0 text-right">Designed by Nayanajitha</p>
                </div>
            </div>
        </div>
    </footer>

    <!--delete Conformation Modal -->
    <div class="modal fade" id="deleteConfirmModal" data-backdrop="static" data-keyboard="false" tabindex="-1"
        aria-labelledby="deleteConfirmModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmlabel">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this product?</p>
                    <p>This action cannot be undone.</p>
                    <p class="text-danger">This will also delete all the reviews and ratings for this product.</p>
                    <p class="text-danger">This will also delete all the bookings for this product.</p>
                    <p class="text-danger">This will also delete all the wishlist items for this product.</p>
                    <p class="text-danger">This will also delete all the cart items for this product.</p>
                    <p class="text-danger">This will also delete all the orders for this product.</p>
                    <p class="text-danger">This will also delete all the order items for this product.</p>
                    <div id="delete-status" class="alert"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No, Cancel</button>
                    <button type="button" id="deleteConfirmed" class="btn btn-danger">Yes, Delete</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="addProductModal" tabindex="-1" aria-labelledby="addProductModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="addProductModalLabel">Add a new product</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="newItem" enctype="multipart/form-data">
                    <div class="modal-body">
                        <!-- Component to add a new product -->
                        <div class="my-4">

                            <div class="mb-3">
                                <label for="product-name" class="form-label">Product Name</label>
                                <input type="text" class="form-control" id="product-name" name="name"
                                    placeholder="Enter product name" required>
                            </div>
                            <div class="container" id="locationInput">
                                <div class="row">
                                    <div class="mb-3">
                                        <label for="location" class="form-label">Location (Use <kbd>CTRL</kbd> to select
                                            multiple)</label>
                                        <div>
                                            <label class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" name="location"
                                                    value="colombo">
                                                Colombo
                                            </label>
                                            <label class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" name="location"
                                                    value="kandy">
                                                Kandy
                                            </label>
                                            <label class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" name="location"
                                                    value="galle">
                                                Galle
                                            </label>
                                            <label class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" name="location"
                                                    value="nuwaraeliya">
                                                Nuwara Eliya
                                            </label>
                                            <label class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" name="location"
                                                    value="anuradhapura">
                                                Anuradhapura
                                            </label>
                                            <label class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" name="location"
                                                    value="polonnaruwa">
                                                Polonnaruwa
                                            </label>
                                            <label class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" name="location"
                                                    value="jaffna">
                                                Jaffna
                                            </label>
                                            <label class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" name="location"
                                                    value="trincomalee">
                                                Trincomalee
                                            </label>
                                            <label class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" name="location"
                                                    value="sigiriya">
                                                Sigiriya
                                            </label>
                                            <label class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" name="location"
                                                    value="bentota">
                                                Bentota
                                            </label>
                                            <label class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" name="location"
                                                    value="negombo">
                                                Negombo
                                            </label>
                                            <label class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" name="location"
                                                    value="matara">
                                                Matara
                                            </label>
                                            <label class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" name="location"
                                                    value="hikkaduwa">
                                                Hikkaduwa
                                            </label>
                                            <label class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" name="location"
                                                    value="mirissa">
                                                Mirissa
                                            </label>
                                            <label class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" name="location"
                                                    value="ella">
                                                Ella
                                            </label>
                                            <label class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" name="location"
                                                    value="arugambay">
                                                Arugambay
                                            </label>
                                            <label class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" name="location"
                                                    value="batticaloa">
                                                Batticaloa
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="container" id="categoryInput">
                                <div class="row">
                                    <label for="category" class="form-label">Category</label>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-check d-block">
                                                <input class="form-check-input" type="radio" name="categories"
                                                    value="accommodation" required>
                                                Accommodation
                                            </label>
                                            <label class="form-check d-block">
                                                <input class="form-check-input" type="radio" name="categories"
                                                    value="tours" required>
                                                Tours and Activities
                                            </label>
                                            <label class="form-check d-block">
                                                <input class="form-check-input" type="radio" name="categories"
                                                    value="transportation" required>
                                                Transportation
                                            </label>
                                            <label class="form-check d-block">
                                                <input class="form-check-input" type="radio" name="categories"
                                                    value="experiences" required>
                                                Experiences
                                            </label>
                                            <label class="form-check d-block">
                                                <input class="form-check-input" type="radio" name="categories"
                                                    value="wildlife" required>
                                                Wildlife and Nature
                                            </label>

                                        </div>

                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-check d-block">
                                                <input class="form-check-input" type="radio" name="categories"
                                                    value="beaches" required>
                                                Beaches and Coastal Activities
                                            </label>
                                            <label class="form-check d-block">
                                                <input class="form-check-input" type="radio" name="categories"
                                                    value="historical" required>
                                                Historical and Cultural Sites
                                            </label>
                                            <label class="form-check d-block">
                                                <input class="form-check-input" type="radio" name="categories"
                                                    value="food" required>
                                                Food and Dining
                                            </label>
                                            <label class="form-check d-block">
                                                <input class="form-check-input" type="radio" name="categories"
                                                    value="shopping" required>
                                                Shopping and Souvenirs
                                            </label>
                                            <label class="form-check d-block">
                                                <input class="form-check-input" type="radio" name="categories"
                                                    value="wellness" required>
                                                Wellness and Spa
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="price" class="form-label">Price</label>
                                <input type="number" class="form-control" id="price" name="price"
                                    placeholder="Enter price" required>
                            </div>

                            <div class="mb-3">
                                <label for="discount" class="form-label">Discount (%)</label>
                                <input type="number" class="form-control" id="discount" name="discount"
                                    placeholder="Enter discount" value="0">
                            </div>

                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea id="description" class="form-control" rows="4" name="description"
                                    placeholder="Enter description" required></textarea>
                            </div>

                            <div class="mb-3">
                                <label for="image" class="form-label">Image</label>
                                <input type="file" class="form-control" name="image" id="image" required>
                            </div>

                            <div class="mb-3">
                                <label for="quantity" class="form-label">Quantity</label>
                                <input type="number" class="form-control" id="quantity" name="quantity"
                                    placeholder="Enter quantity">
                            </div>

                            <div id="additional-properties"></div>
                            <input type="hidden" name="user" value="{{user.sub}}">

                        </div>
                        <div class="alert d-none" id="insertStatus">

                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="reset" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add Product</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>

    <script>
        const userId = "{{user.sub}}";
    </script>
    <script src="/js/dashboard.js"></script>


</body>

</html>