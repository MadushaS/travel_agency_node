<style>
    .h-max-50 {
        max-height: 50vh;
    }

    .category-section {
        padding: 60px 0;
    }

    .image-hover {
        overflow: hidden;
        transition: transform 0.3s ease-in-out;
    }

    .image-hover:hover {
        transform: translateY(-5px);
    }

    .category-image img {
        width: 100%;
        height: auto;
    }

    .category-title {
        margin-top: 10px;
        font-size: 20px;
        font-weight: bold;
    }
</style>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Nayana Travel Agency</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Services
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li class="nav-item">
                                <a class="nav-link" href="/flights">Flights</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/hotels">Hotels</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/shuttles">Shuttles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/map">Map</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/weather">Weather</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/messaging">Messaging</a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/explore">Explore</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/marketplace">Marketplace</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/reviews">Reviews</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">About</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <main>
        <div class="container-fluid p-3">
                <div class="row">
                    <div class="col-12 d-flex justify-content-between align-items-center">
                        <div class="d-flex justify-content-start">
                            <span class="display-6 fw-normal">Marketplace</span>
                        </div>
                        <div class="d-flex justify-content-end">
                        {{#if login}}
                            <a href="/marketplace/dashboard" class="btn btn-primary me-2">Dashboard</a>
                            <a href="/logout" class="btn btn-primary">Logout</a>
                        {{else}}

                            <a href="/marketplace/dashboard" class="btn btn-primary me-2">Login</a>
                            <a href="/marketplace/dashboard" class="btn btn-primary">Register</a>
                        {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        <form action="/marketplace/search" method="get">
            <section class="bg-body-secondary">
                <div class="product-search pt-5">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <h2 class="display">Find what you need</h2>
                            </div>
                            <div class="col-12">
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="button-addon1"><i
                                            class="fas fa-search"></i></span>
                                    <input type="text" class="form-control form-control-lg" name="q" value="{{_query}}"
                                        placeholder="Search for a product" aria-label="Search for a product"
                                        aria-describedby="button-addon2">
                                    <button class="btn btn-outline-primary btn-lg" type="submit"
                                        id="button-addon2">Search</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="loader" class="text-center d-none">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <div id="view" class="d-none">
                    <button class="btn btn-primary" id="see-more-btn">See More</button>
                </div>
            </section>

            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-3 bg-body-secondary p-4">
                        <div class="sidebar">
                            <button class="btn d-lg-none fst-italic mb-4 text-bg-dark" type="button"
                                data-bs-toggle="collapse" data-bs-target="#filterCollapse" aria-expanded="false"
                                aria-controls="filterCollapse">
                                <span class="fas fa-regular fa-filter-list" aria-hidden="true"></span>
                                Filter
                            </button>
                            <div class="collapse d-lg-block" id="filterCollapse">
                                <!-- Filter options here -->
                                <h5>Categories</h5>
                                <div class="category-filter ps-3 py-4">
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="category" value="accommodation" {{#if (includes
                                            _category "accommodation" )}}checked{{/if}}>
                                        Accommodation</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="category" value="tours" {{#if (includes _category "tours"
                                            )}}checked{{/if}}> Tours and
                                        Activities</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="category" value="transportation" {{#if (includes
                                            _category "transportation" )}}checked{{/if}}>
                                        Transportation</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="category" value="experiences" {{#if (includes _category "experiences"
                                            )}}checked{{/if}}> Experiences</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="category" value="wildlife" {{#if (includes _category "wildlife"
                                            )}}checked{{/if}}> Wildlife and
                                        Nature</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="category" value="beaches" {{#if (includes _category "beaches"
                                            )}}checked{{/if}}> Beaches and Coastal
                                        Activities</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="category" value="historical" {{#if (includes _category "historical"
                                            )}}checked{{/if}}> Historical and
                                        Cultural Sites</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="category" value="food" {{#if (includes _category "food"
                                            )}}checked{{/if}}> Food and Dining</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="category" value="shopping" {{#if (includes _category "shopping"
                                            )}}checked{{/if}}> Shopping and
                                        Souvenirs</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="category" value="wellness" {{#if (includes _category "wellness"
                                            )}}checked{{/if}}> Wellness and Spa</label>
                                </div>
                                <h5>Price Range</h5>
                                <div class="price-filter ps-3 py-4">
                                    <label class="d-block"><input type="radio" name="price" class="form-check-input"
                                            value="0-10" {{#if (eq _price "0-10" )}}checked{{/if}}> $</label>
                                    <label class="d-block"><input type="radio" name="price" class="form-check-input"
                                            value="10-100" {{#if (eq _price "10-100" )}}checked{{/if}}> $$</label>
                                    <label class="d-block"><input type="radio" name="price" class="form-check-input"
                                            value="100-1000" {{#if (eq _price "100-1000" )}}checked{{/if}}> $$$</label>
                                </div>
                                <h5>Location</h5>
                                <div class="location-filter ps-3 py-4">
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="location" value="colombo" {{#if (includes _location "colombo"
                                            )}}checked{{/if}}> Colombo</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="location" value="kandy" {{#if (includes _location "kandy"
                                            )}}checked{{/if}}> Kandy</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="location" value="galle" {{#if (includes _location "galle"
                                            )}}checked{{/if}}> Galle</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="location" value="nuwaraeliya" {{#if (includes _location "nuwaraeliya"
                                            )}}checked{{/if}}> Nuwara Eliya</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="location" value="anuradhapura" {{#if (includes _location "anuradhapura"
                                            )}}checked{{/if}}> Anuradhapura</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="location" value="polonnaruwa" {{#if (includes _location "polonnaruwa"
                                            )}}checked{{/if}}> Polonnaruwa</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="location" value="jaffna" {{#if (includes _location "jaffna"
                                            )}}checked{{/if}}> Jaffna</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="location" value="trincomalee" {{#if (includes _location "trincomalee"
                                            )}}checked{{/if}}> Trincomalee</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="location" value="sigiriya" {{#if (includes _location "sigiriya"
                                            )}}checked{{/if}}> Sigiriya</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="location" value="bentota" {{#if (includes _location "bentota"
                                            )}}checked{{/if}}> Bentota</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="location" value="negombo" {{#if (includes _location "negombo"
                                            )}}checked{{/if}}> Negombo</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="location" value="matara" {{#if (includes _location "matara"
                                            )}}checked{{/if}}> Matara</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="location" value="hikkaduwa" {{#if (includes _location "hikkaduwa"
                                            )}}checked{{/if}}> Hikkaduwa</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="location" value="mirissa" {{#if (includes _location "mirissa"
                                            )}}checked{{/if}}> Mirissa</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="location" value="ella" {{#if (includes _location "ella"
                                            )}}checked{{/if}}> Ella</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="location" value="arugambay" {{#if (includes _location "arugambay"
                                            )}}checked{{/if}}> Arugambay</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input"
                                            name="location" value="batticaloa" {{#if (includes _location "batticaloa"
                                            )}}checked{{/if}}> Batticaloa</label>
                                    <!-- Add more cities here -->
                                </div>
                                <h5>Rating</h5>
                                <div class="rating-filter ps-3 py-4">
                                    <label class="d-block"><input type="checkbox" class="form-check-input" name="rating"
                                            value="5" {{#if (eq _rating "5" )}}checked{{/if}}> 5 Stars</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input" name="rating"
                                            value="4" {{#if (eq _rating "4" )}}checked{{/if}}> 4 Stars</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input" name="rating"
                                            value="3" {{#if (eq _rating "3" )}}checked{{/if}}> 3 Stars</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input" name="rating"
                                            value="2" {{#if (eq _rating "2" )}}checked{{/if}}> 2 Stars</label>
                                    <label class="d-block"><input type="checkbox" class="form-check-input" name="rating"
                                            value="1" {{#if (eq _rating "1" )}}checked{{/if}}> 1 Star</label>
                                </div>
                                <h5>Sort By</h5>
                                <div class="sort-filter ps-3 py-4">
                                    <label class="d-block"><input type="radio" class="form-check-input" name="sort"
                                            value="price" {{#if (eq _sort "price" )}}checked{{/if}}> Price</label>
                                    <label class="d-block"><input type="radio" class="form-check-input" name="sort"
                                            value="rating" {{#if (eq _sort "rating" )}}checked{{/if}}> Rating</label>
                                    <label class="d-block"><input type="radio" class="form-check-input" name="sort"
                                            value="popularity" {{#if (eq _sort "popularity" )}}checked{{/if}}>
                                        Popularity</label>
                                </div>
                                <button class="btn btn-primary w-100" type="submit">Apply Filters</button>
                            </div>
        </form>
        </div>
        </div>
        <div class="col-lg-9">
            <div class="container p-4">
                <div class="alert alert-info w-100">
                    <p class="mb-0">Showing 1-10 of 100 results</p>
                </div>
                <!-- Products Start -->
                <div class="row px-xl-5">
                    <div class="row px-xl-5">
                        {{#each products}}
                        <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                            <div class="product-item bg-light mb-4">
                                <div class="product-img position-relative overflow-hidden">
                                    <img class="img-fluid w-100 thumb" src="{{image}}"
                                        alt="{{name}}">
                                    <div class="mt-3 product-action text-center">
                                        <a class="btn btn-outline-dark btn-square" href=""><i
                                                class="fa fa-shopping-cart"></i></a>
                                        <a class="btn btn-outline-dark btn-square" href=""><i
                                                class="fa fa-search"></i></a>
                                    </div>
                                </div>
                                <div class="text-center py-4">
                                    <a class="h6 text-decoration-none text-truncate" href="">{{name}}</a>
                                    <div class="d-flex align-items-center justify-content-center mt-2">
                                        <h5>${{nowPrice}}</h5>
                                        {{#if (neq price nowPrice)}}
                                          <h6 class="text-muted ml-2"><del>${{price}}</del></h6>
                                        {{/if}}
                                    </div>
                                    <div class="d-flex align-items-center justify-content-center mb-1">
                                        {{#if (gt rating 0.7)}}
                                            <small class="fa fa-star text-primary mr-1"></small>
                                        {{else if (gt rating 0.3)}}
                                            <small class="fa fa-star-half-alt text-primary mr-1"></small>
                                        {{else}}
                                            <small class="fa fa-light fa-star text-primary mr-1"></small>
                                        {{/if}}
                                        
                                        {{#if (gt rating 1.7)}}
                                            <small class="fa fa-star text-primary mr-1"></small>
                                        {{else if (gt rating 1.3)}}
                                            <small class="fa fa-star-half-alt text-primary mr-1"></small>
                                        {{else}}
                                            <small class="fa fa-light fa-star text-primary mr-1"></small>
                                        {{/if}}

                                        {{#if (gt rating 2.7)}}
                                            <small class="fa fa-star text-primary mr-1"></small>
                                        {{else if (gt rating 2.3)}}
                                            <small class="fa fa-star-half-alt text-primary mr-1"></small>
                                        {{else}}
                                            <small class="fa fa-light fa-star text-primary mr-1"></small>
                                        {{/if}}

                                        {{#if (gt rating 3.7)}}
                                            <small class="fa fa-star text-primary mr-1"></small>
                                        {{else if (gt rating 3.3)}}
                                            <small class="fa fa-star-half-alt text-primary mr-1"></small>
                                        {{else}}
                                            <small class="fa fa-light fa-star text-primary mr-1"></small>
                                        {{/if}}

                                        {{#if (gt rating 4.7)}}
                                            <small class="fa fa-star text-primary mr-1"></small>
                                        {{else if (gt rating 4.3)}}
                                            <small class="fa fa-star-half-alt text-primary mr-1"></small>
                                        {{else}}
                                            <small class="fa fa-light fa-star text-primary mr-1"></small>
                                        {{/if}}

                                        <small>({{rating}})</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
                <!-- Products End -->
                <nav class="text-center d-block mx-auto">
                    <ul class="pagination d-inline-flex">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link active" href="#">1</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        </div>

        </div>
    </main>

    <footer class="bg-light py-3 mt-3">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p class="text-muted mb-0">Nayana Travel Agency &copy; 2023</p>
                </div>
                <div class="col-md-6">
                    <p class="text-muted mb-0 text-right">Designed by Nayanajitha</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>


</body>

</html>